
<form action="buy_product" method="post" autocomplete="off">
  <div class="container-fluid mt-4">
    <div class="row ml-1">
      <div class="col-md-3 mr-3">
        <div class="row">
          <div class="card bg-light w-100 pt-2 pb-2 pr-3 pl-3">
            <div class="card-body custdetails">
              <div class="text-center">Customer Details</div>
              <hr>
              <div class="row">
                <table class="table table-borderless mt-3 ">
                  <tbody>
                  <tr>
                    <td class="custdetails-info">First Name:</td>
                    <td><input type="text" name="first_name" pattern="^[A-Za-z -]+$" required value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].first_name : '' %>" class="form-control"></td>
                  </tr>
                  <tr>
                    <td class="custdetails-info">Last Name:</td>
                    <td><input type="text" name="last_name"  pattern="^[A-Za-z -]+$" required value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].last_name : '' %>" class="form-control"></td>
                  </tr>
                  <tr>
                    <td class="custdetails-info">Address:</td>
                    <td><textarea minlength="20" class="form-control" name="address" required value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].address : '' %>" style="height: 150px;"><%= @result['customer_detail'].present? ? @result['customer_detail'][0].address : '' %></textarea></td>
                  </tr>
                  <tr>
                    <td class="custdetails-info">Phone No:</td>
                    <td><input type="tel" <%= params['phone_number'].present? ? "readonly" : '' %> maxlength="10" name="phone_no" pattern="^[6-9][0-9]{9}$" required minlength="10" value="<%= @result['customer_detail'].present? ? @result['customer_detail'][0].phone : params['phone_number'].present? ? params['phone_number'] : '' %>" class="form-control customer_number"></td>
                  </tr>
                  </tbody>
                </table>
              </div>
              <a href="product_selling">Creat New Customer</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="row">
          <div class="card bg-light w-100">
            <div class="card-header">
              <div>
                <span>Buy Products&nbsp;&nbsp;</span>
                <span class="float-right"><a class="btn text-warning" id="discounts">Discounts</a></span>
              </div><br>
              <div class="form-group has-search">
                <input type="text" class="form-control-search search_product" placeholder="Product Search"><span class="fa fa-search form-control-feedback"></span>
              </div>
            </div>
            <div class="card-body">              
              <div class="table-responsive product-selling-order-table">
                <table class="table table-borderless text-center">
                  <thead class="table-header thead-light">
                    <tr>
                        <th  style="padding:5px;" class="table-header" scope="col">Name</th>
                        <th style="padding:5px;" class="table-header" scope="col">Weight</th>
                        <th style="padding:5px;" class="table-header" scope="col">Per Unit Price</th>
                        <th style="padding:5px;" class="table-header" scope="col">Quantity</th>
                        <th style="padding:5px;" class="table-header" scope="col">Price</th>
                        </tr>
                    </thead>
                  <tbody class="product_table">
                  <% if  @result['product'].present? %>
                    <% @result['product'].each_with_index  do |product,index| %>
                      <tr style="padding:5px;">
                        <td style="padding:5px;">
                          <input type="hidden" name="product_name[<%= index %>]" value="<%= product['product'].id %> " class="form_product_name form-control">
                          <span><%= product['product'].product_name %></span>
                        </td>
                        <td style="padding:5px;">
                          <select style="width:100px" required class="ml-auto mr-auto form-control form_sku sku_<%= index %> sku_detail" name="sku[<%= index %>]">
                            <option disabled selected>SKU</option>
                            <% product['product_detail'].each do |product_detail_val| %>
                              <option value="<%=product_detail_val.id %>" data-value="<%=product_detail_val.selling_rice %>"><%=product_detail_val.sku %>g</option>
                            <% end %>
                          </select>
                          <input type="hidden" value="<%= index %>">
                        </td>
                        <td style="padding:5px;">
                          <span class="fa fa-inr show_price_tag"></span><span class="per_unit_price"></span>
                        </td>
                        <td  style="padding:5px;">
                          <select style="width:80px" required class="ml-auto mr-auto form-control qty form_qty qty_<%= index %>" name="qty[<%= index %>]" id="<%= index %>">
                            <option disabled selected>QTY</option>
                            <% (1..10).each do |val| %>
                              <option value="<%=val %>"><%=val %></option>
                            <% end %>
                          </select>
                        </td>
                        <td style="padding:5px;">
                          <span class="fa fa-inr show_price_tag"></span> <span class="form_price view_price_<%= index %> price_<%= index %> "></span>
                          <input type="hidden" read_only="true" class="w-50 ml-auto mr-auto show_price_sum form-control form_price price_<%= index %>" name="price[<%= index %>]">
                        </td>
                      </tr>
                    <% end %>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer">
              <span >Sub-total:&nbsp;</span><span class="fa fa-inr"></span> 
              <span class="sub_total_product"></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row ml-1 mt-2 mb-3">
      <div class="col-md-6 mr-3">
        <div class="row">
          <div class="card bg-light w-100 pb-5">
            <div class="card-body payment-tag-title">
              <div class="text-center">Payment Method</div>
              <div class="row justify-content-center mt-4">
                
                <div class="col-md-5 payment-tag p-3 h6">
                  <input type="radio" name="payment_type" checked value="1">
                  <span class="ml-3">
                                        Cash On Delivery
                                    </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-5">
        <div class="row">
          <button class="btn btn-primary w-100 mb-2 p-5 checkout"  onclick="checker(event);">
            Checkout
          </button>
        </div>
        <div class="row">
          <button type="button" class="btn btn-danger w-100 p-4 reset_form">
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>

</form>

<div class="popup" id="product_modal">
  <div class="card border-0 popup-cardbody">
    <div class="card-body">
      <div class="row justify-content-end">
        <span class="mr-2"><a href="#"  class="h5 close text-white" id="close_product_modal">&#10006;</a></span>
      </div>
      <div class="row mt-2 text-white h6 justify-content-center">
        <span>Please Add Atleast 1 Product</span>
        </div>        
      </div>
    </div>
  </div>
</div>

<div class="popup checkout_order" id="product_modal">
  <div class="card border-0 min-order-popup-cardbody">
    <div class="card-body">
      <div class="row justify-content-end">
        <span class="mr-2"><a href="#"  class="h5 close text-white" id="close_checkout_button">&#10006;</a></span>
      </div>
      <div class="row mt-2 text-white justify-content-center">
        <div class="h5">Minimum Order Total Should be more than &#x20B9;&nbsp;105 </div><br><br>
        <div class="h5">Please select more item to continue</div>
      </div>        
      </div>
    </div>
  </div>
</div>

<div class="popup" id="discounts_modal">
  <div class="card border-0 discount-popup-cardbody">
    <div class="card-body">
      <div class="row justify-content-end">
        <span class="mr-2"><a href="#"  class="h5 close text-white" id="close_discounts_modal">&#10006;</a></span>
      </div>
      <div class="row mt-2 text-white h6 justify-content-center">
        <table class="table text-center text-white">
        <tr>
        <td>&#x20B9; 100 - &#x20B9; 300</td>
        <td>*Free Delivery</td>
        </tr>
        <tr>
        <td>&#x20B9; 301 - &#x20B9; 500</td>
        <td>5%</td>
        </tr>
        <tr>
        <td>&#x20B9; 501 - &#x20B9; 1000</td>
        <td>10%</td>
        </tr>
        <tr>
        <td>&#x20B9; 1001 - &#x20B9; 2000</td>
        <td>15%</td>
        </tr>
        <tr>
        <td>&#x20B9; 2001+</td>
        <td>20%</td>
        </tr>
        </table>
        </div>        
      </div>
    </div>
  </div>


</div>

<script>
  $('.show_price_tag').hide();
    $(document).ready(function(){
        $(".search_product").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $(".product_table tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
  $('#close_checkout_button').click(function(){
      $('.checkout_order').hide();
  });
    $('.checkout_order').hide();

 $('#discounts').click(function(){
    $('#discounts_modal').show();
  });

  $('#close_discounts_modal').click(function(){
    $('#discounts_modal').hide();
  });

   $('#close_product_modal').click(function(){
    $('#product_modal').hide();
  });
    function checker(event){
        var sum = 0;
        $('.show_price_sum').each(function() {
            sum += Number($(this).val());
        });

        if (sum < 105){
            $('.checkout_order').show();
            event.preventDefault();
        }
        // if ($('.form_price').hasClass("add_price") && $('.form_price').hasClass("sku_present") && $('.form_price').hasClass("qty_present")) {
        // } else {
        //     $('#product_modal').show();
        //     event.preventDefault();
        // }
    }
    // =========for reset============
    $(".reset_form").on("click", function() {
        $(".form_sku").val("SKU");
        $(".form_qty").val("QTY");
        $(".form_price").val("0");
        $('input').removeClass('add_price');
    });
    var total_product = 0;
    $(".qty").change(function () {
        var id = $(this).attr("id");
        var unit_price = $(".sku_" + id + " option:selected").attr("data-value");
        var sku = parseInt(parseInt($(".sku_" + id + " option:selected").attr("data-value"))
            ,
            10
        );
        $(this).parent().prev().children().text(unit_price)
        // $(this).parent().prev().children().prev().show()
        // console.log("*****"+id);
        // console.log("*****"+sku);
        var qty = parseInt($(this).val(), 10);
        var price = sku * qty;
        $(".price_" + id).val(price);
        $(".view_price_" + id).val(price);

// =========================subtotal on product=============
        $('.show_price_sum').each(function() {
            total_product += Number($(this).val());
        });
        $('.sub_total_product').text(total_product);
// =========================subtotal on product=============

        (parseInt(price)||0) ? $(".price_" + id).val(price) : $(".price_" + id).val("0");
        (parseInt(price)||0) ? $(".view_price_" + id).text(price) : $(".view_price_" + id).text("0");
        $(".view_price_" + id).prev().show();
        $(".price_" + id).addClass("add_price");
        $(".view_price_" + id).addClass("add_price");

        $(".view_price_" + id).addClass("qty_present");

    });
    var total_product_qty = 0;
    $(".sku_detail").change(function () {
        var id = $(this).next().val();
        var unit_price = $(".sku_" + id + " option:selected").attr("data-value");
        var sku = parseInt(
            $(".sku_" + id + " option:selected").attr("data-value"),
            10
        );
        $(this).parent().next().children().text(unit_price)
        // $(this).parent().next().children().first().show()
        var qty = parseInt($('.qty_'+id).val(), 10);
        var price = sku * qty;
        // console.log("*****"+id);
        // console.log("*****"+sku);
        // console.log("*****"+qty);
        // $(".price_" + id).val(price);
        (parseInt(price)||0) ? $(".price_" + id).val(price) : $(".price_" + id).val("0");
        (parseInt(price)||0) ? $(".view_price_" + id).text(price) : $(".view_price_" + id).text("0");

// =========================subtotal on product=============
        $('.show_price_sum').each(function() {
            total_product_qty += Number($(this).val());
        });
        $('.sub_total_product').text(total_product_qty);
// =========================subtotal on product=============
        $(".view_price_" + id).prev().show();
        $(".price_" + id).addClass("add_price");
        $(".view_price_" + id).addClass("add_price");
        $(".view_price_" + id).addClass("sku_present");

    });

    <% if params['status'] == "3" %>

    <% end %>
</script>