<p id="notice"><%= notice %></p>

<h1>Discounts Products</h1>

<table>
  <thead>
    <tr>
      <th>Discount</th>
      <th>Product</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discounts_products.each do |discounts_product| %>
      <tr>
        <td><%= discounts_product.discount_id %></td>
        <td><%= discounts_product.product_id %></td>
        <td><%= discounts_product.status %></td>
        <td><%= link_to 'Show', discounts_product %></td>
        <td><%= link_to 'Edit', edit_discounts_product_path(discounts_product) %></td>
        <td><%= link_to 'Destroy', discounts_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

