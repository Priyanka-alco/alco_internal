<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title></title>
  <!-- <link rel="stylesheet" href="style.css" /> -->
  <link rel="stylesheet" href="Styles/Login.css" />
  <link rel="stylesheet" href="Styles/bootstrap.min.css" />
  <!-- <link
        href="https://fonts.googleapis.com/css2?family=Piazzolla:wght@200&display=swap"
        rel="stylesheet"
      /> -->
</head>
<body class="bodyBackground">
<div class="card loginCard">
  <div class="card-body">
    <div class="container-fluid">
      <div class="row" style="margin-top:10%;margin-left:2%;margin-right: auto;">
        <div class="col-md-6 cardCol-1" style="border-right:1px solid black;">
          <%= image_tag("alco_eats.png",:class => "img-fluid login_img") %>
<!--          <span style="font-size: 2.3vw;margin-left:47%">Call Center</span>-->
        </div>
        <div class="col-md-6 cardCol-2" style="padding-left: 5%;">
          <div class="card loginFormCard">
            <div class="card-header text-center">
              Sign In
            </div>
            <div class="card-body formCard"  method="post" action="authenticate"  >
              <form class="form" method="post" action="authenticate" autocomplete="off">
                <div class="form-group">
                  <input type="email" class="form-control" placeholder="Email" name="email" />
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" placeholder="Password" name="password" />
                </div>
                <div class="form-group">
                  <button type="submit" class="btn loginBtn" style="background-color: #003460;font-size: 20px;color:white">Login</button>
                </div>
              </form>
            </div>
          </div>

        </div>
      </div>
    </div>
    <!--  -->
  </div>
</div>

<div class="popup" id="valid_email_modal">
  <div class="card border-0 popup-cardbody">
    <div class="card-body">
      <div class="row justify-content-end">
        <span class="mr-2"><a href="#"  class="h5 close text-white" id="close_valid_email">&#10006;</a></span>
      </div>
      <div class="row mt-2 text-white h6 justify-content-center">
        <span>Please Enter Valid Email</span>
        </div>        
      </div>
    </div>
  </div>
</div>

<div class="popup" id="valid_password_modal">
  <div class="card border-0 popup-cardbody">
    <div class="card-body">
      <div class="row justify-content-end">
        <span class="mr-2"><a href="#"  class="h5 close text-white" id="close_valid_password">&#10006;</a></span>
      </div>
      <div class="row mt-2 text-white h6 justify-content-center">
        <span>Please Enter Valid Password</span>
        </div>        
      </div>
    </div>
  </div>
</div>

</body>

<script>

 $('#close_valid_email').click(function(){
    $('#valid_email_modal').hide();
  });
   $('#close_valid_password').click(function(){
    $('#valid_password_modal').hide();
  });

    <% if params['status'] == "400" %>
    $('#valid_password_modal').show();  
    <% end %>
    <% if params['status'] == "300" %>
    $('#valid_email_modal').show();
    <% end %>
</script>
